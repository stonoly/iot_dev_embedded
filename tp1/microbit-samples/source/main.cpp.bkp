void set_vert()
{
    uBit.io.P0.setDigitalValue(1);
    uBit.io.P1.setDigitalValue(0);
    uBit.io.P2.setDigitalValue(0);
}

void set_orange()
{
    uBit.io.P0.setDigitalValue(0);
    uBit.io.P1.setDigitalValue(1);
    uBit.io.P2.setDigitalValue(0);
}

void set_rouge()
{
    uBit.io.P0.setDigitalValue(0);
    uBit.io.P1.setDigitalValue(0);
    uBit.io.P2.setDigitalValue(1);
}